<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_16dp"
    android:layout_marginTop="@dimen/margin_16dp"
    android:layout_marginRight="@dimen/margin_16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTimerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/calendar_header"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_title_32sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="br.com.mariana.take_a_break.ui.calendar.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.calendar.ItemFragment"
        tools:listitem="@layout/fragment_item" />

</LinearLayout>